          const data = Object.values(expensesData);

          const ctx = document.getElementById('expenseChart').getContext('2d');
          const expenseChart = new Chart(ctx, {
              type: 'line',  // o 'bar', 'area', etc.
              data: {
                  labels: labels,
                  datasets: [{
                      label: 'Gasto Mensual',
                      data: data,
                      fill: false,
                      borderColor: 'rgb(75, 192, 192)',
                      tension: 0.1
                  }]
              },
              options: {
                  scales: {
